[user]
    email = matthew.j.laufer@gmail.com
    name = Matthew Laufer

[core]
    editor = nvim
    pager = delta

[init]
    defaultBranch = main

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    side-by-side = true
    syntax-theme = flashy
    line-numbers-minus-style = "#f87171"
    line-numbers-plus-style = "#74c792"
    line-numbers-zero-style = "#818181"
    minus-style = "syntax #422323"
    plus-style = "syntax #2c3730"
    minus-emph-style = "syntax #693232"
    plus-emph-style = "syntax #354c3c"

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[pull]
    rebase = true

[rerere]
    enabled = true
