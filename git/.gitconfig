[user]
    email = matthew.j.laufer@gmail.com
    name = Matthew Laufer

[core]
    editor = nvim
    pager = delta

[init]
    defaultBranch = main

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    side-by-side = true
    syntax-theme = inklight
    line-numbers-minus-style = "#b30000"
    line-numbers-plus-style = "#437800"
    line-numbers-zero-style = "#6d6d6d"
    minus-style = "syntax #ffd8d7"
    minus-emph-style = "syntax #ffc7c7"
    plus-style = "syntax #d4ebc6"
    plus-emph-style = "syntax #c0e5a6"

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[pull]
    rebase = true

[rerere]
    enabled = true
