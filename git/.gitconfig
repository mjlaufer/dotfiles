[user]
    email = matthew.j.laufer@gmail.com
    name = Matthew Laufer

[core]
    editor = nvim
    pager = delta

[init]
    defaultBranch = main

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
    side-by-side = true
    syntax-theme = raraku
    line-numbers-minus-style = "#cd191c"
    line-numbers-plus-style = "#007a05"
    line-numbers-zero-style = "#e4d9bd"
    minus-style = "syntax #ffcacb"
    minus-emph-style = "syntax #ffb7b7"
    plus-style = "syntax #c8ecc8"
    plus-emph-style = "syntax #aee1ae"

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default

[pull]
    rebase = true

[rerere]
    enabled = true
