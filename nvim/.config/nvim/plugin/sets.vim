" Keep edited buffers around in the background.
set hidden

set noerrorbells

set tabstop=4 softtabstop=4
set shiftwidth=4
set expandtab
set smartindent
set nowrap
set relativenumber
set nu

" Add a left column to display signs for diagnostics.
set signcolumn=yes
set colorcolumn=100

set scrolloff=8

" History
set noswapfile
set nobackup

" Remove highlight from search term when search is complete.
set nohlsearch
set incsearch

" Enable True Color support.
set termguicolors
